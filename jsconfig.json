{
 "compilerOptions": {
  "module": "ESNext",
  "moduleResolution": "Bundler",
  "target": "ES2020",
  "jsx": "react",
  "allowImportingTsExtensions": true,
  "strictNullChecks": true,
  "strictFunctionTypes": true,
  "baseUrl": ".",              // Adiciona baseUrl
    "paths": {                    // Adiciona paths para facilitar a resolução de módulos
      "@chakra-ui/react": ["node_modules/@chakra-ui/react"],
      "*": ["src/*"]
    }
 },
 "exclude": [
  "node_modules",
  "**/node_modules/*"
 ]
}